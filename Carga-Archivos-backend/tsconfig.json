{ 
  "compilerOptions": { 
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "target": "ES6", 
    "module": "commonjs", 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "strict": true, 
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}